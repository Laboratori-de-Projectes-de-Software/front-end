---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import EmojiBackground from "../components/EmojiBackground.astro";
import {PasswordRetrieveForm} from "../components/auth/PasswordRetrieveForm";

const emojis : string[] = ["ðŸ˜°"];
---
<!-- Inicio sesion en medio -->
<Layout>
  <EmojiBackground emojis={emojis} zIndex="-100" count={10}>
    <div class="flex items-center justify-center min-h-screen py-6 px-4">
      <div class="flex flex-col md:flex-row max-w-4xl w-full">
        <div class="hidden md:block">
          <Image src="/public/inside/ansiedad.jpeg" alt="Login" width={400} height={400} class="rounded-2xl md:rounded-r-none md:rounded-l-2xl h-full object-cover" transition:name="photo"/>
