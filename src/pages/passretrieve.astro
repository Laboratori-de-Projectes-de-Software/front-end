        <div class="relative z-10 mb-4 md:mb-0">
          <PasswordRetrieveForm className="w-full md:w-[450px] p-6 md:p-10 bg-white rounded-2xl md:rounded-r-2xl md:rounded-l-none shadow-md" client:idle />
        </div>
      </div>
    </div>
  </EmojiBackground>
</Layout>
