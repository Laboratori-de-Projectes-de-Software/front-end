---
import Layout from "../layouts/Layout.astro";
import "../styles/home.css";
import UserCircle from "../components/UserCircle.jsx";
import { FaHome } from "react-icons/fa";
import { CreateBotForm } from "../components/CreateBotForm.tsx";

const user = null;
---

<Layout>
  <UserCircle user={user} />
  <div class="main-container">
    <div class="home-pill">
      <a href="/home" class="flex items-center">
        <FaHome className="text-white text-xl mr-2" /> Create Bot
      </a>
    </div>
    <CreateBotForm client:load />
  </div>
</Layout>
